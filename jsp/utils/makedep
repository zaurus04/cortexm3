require "getopt.pl";

#  オプションの定義
#
#  -C <cc_path>	Cコンパイラのコマンド名
#  -O <cc_opts>	Cコンパイラ/CPPに渡すオプション
#
#  -X		ソースファイルを強制的にCヘッダファイルと見なす
#
#  -T <target>	ターゲットのファイル名
#  -D <t_dir>	ターゲットのディレクトリ名を指定する
#  -d		ターゲットのディレクトリ部を保持する
#  -s		ターゲットのサフィックスを ".s" にする（デフォルトは ".o"）

#
#  オプションの処理
#
do Getopt("COTD");

$cc_path = $opt_C;
$cc_opts = $opt_O;

$suffix = $opt_s ? "s" : "o";
if ($opt_T) {
	$target_file = $opt_T;
}
elsif ($opt_D) {
	$target_dir = $opt_D;
}
elsif (!$opt_d) {
	$target_dir = "";
}

#
# CodeSourcery G++ Lite + Cygwin 環境専用処理
#
#   環境変数 CSL_JSP_CYGPATH がセットされていた場合は特殊処理を施します。
#   Codesourcery G++ Lite 2008q1-126 for arm-none-eabi を
#   Cygwinと共に使用した場合、Makefile.depend 中に
#
#     c:\\codesourcery\\gxxlite\\bin\\../lib/gcc/arm-none-eabi
#
#   のようにwindows type と unix type 混在の変なパス文字列が出るためです。
#
#   CSL_JSP_CYGPATH には cygwin 側から見た bin フォルダへのパスを入れて下さい。
#   その際パス文字列の終端は'/'で終了させて下さい。
#
#   例:
#     bash $ export CSL_JSP_CYGPATH="/opt/codesourcery/bin/"
#
if ($ENV{'CSL_JSP_CYGPATH'}) {
	$csl_cygpath = $ENV{'CSL_JSP_CYGPATH'};
	$csl_winpath = `cygpath -w $csl_cygpath`;
	$csl_winpath =~ s/\n//;			#Why cygpath output has newline?
	$csl_winpath =~ tr/A-Z/a-z/;		#CSL G++ のパスがなぜか小文字になってます
	$csl_winpath =~ s/\\/\\\\\\\\/g;	#perlの変数展開の関係で'\'を増量
}

#
#  %dependlist に作られた依存関係を出力する
#
sub output_dependlist {
	local($file) = @_;
	local($target, $column, $len);

	if ($target_file) {
		$target = $target_file;
	}
	else {
		$target = $file;
		$target =~ s/(.*)\.(.)/$1.$suffix/;
	}	
	if (defined($target_dir)) {
		$target =~ s/^.*\/([^\/]+)$/$1/;
		if ($target_dir) {
			$target = $target_dir."/".$target;
		}
	}
	print $target, ": ";
	$column = length($target) + 2;
    
	foreach $file (keys(%dependlist)) {
		$len = length($file) + 1;
		if ($column > 8 && $column + $len >= 70) {
			print "\\\n\t";
			$column = 8;
		}
		$column += $len;
		$file =~ s#$csl_winpath#$csl_cygpath# if ($csl_cygpath);	#Convert CSL G++'s bad path
		print "$file ";
	}
	print "\n";
}

#
#  $file の依存関係を %dependlist に作る
#
sub makedepend_one {
	local($file) = @_;
	local($command, $input, $dir, $filename);

	$command = "$cc_path -E $cc_opts";
	if ($opt_X) {
		$command .= " -x c-header";
	}
	unless (open(INPUT, "$command $file |")) {
		print STDERR "makedep: can't open $file\n";
		exit(1);
	}
	while ($line = <INPUT>) {
		if ($line =~ /^\#\s*([0-9]+)\s*\"([^\"]+)\"/) {
			$filename = $2;
			$filename =~ s/ /\\ /;
			if ($filename !~ /^\<.*\>$/ && $filename !~ /\/$/) {
				$dependlist{$filename} = 1;
			}
		}
	}
	unless (close(INPUT)) {
		print STDERR "makedep: can't execute $command\n";
		exit(1);
	}
}

#
#  メインルーチン
#
foreach $file (@ARGV) {
	%dependlist = ();
	do makedepend_one($file);
	do output_dependlist($file) if (%dependlist);
}
